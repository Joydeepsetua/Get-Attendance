<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Attend">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg2"
        android:padding="5dp"
        android:text="All Class"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_class"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_attendance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:spinnerMode="dropdown" />

    <Spinner
        android:id="@+id/spinner_course"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_class"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Spinner
        android:id="@+id/spinner_subject"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_course"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/atten_date"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_subject"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingLeft="3dp"
        android:text="TextView"
        android:textColor="#1C1A1A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/atten_Period"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/atten_date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingLeft="3dp"
        android:text="Select Period"
        android:textColor="#1C1A1A"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/spinner_period_type"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/atten_Period"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/atten_topic"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_period_type"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Topic"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/atten_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/atten_topic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Click" />
</RelativeLayout>
</ScrollView>